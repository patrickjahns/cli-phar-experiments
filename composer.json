{
  "name": "consolidation/cli-phar-experiments",
  "description": "Experiments for creating a symfony cli application to be packaged as phar",
  "license": "GPLv3",
  "authors": [
    {
      "name": "Patrick Jahns",
      "email": "github@patrickjahns.de"
    }
  ],
  "autoload":{
    "psr-4":{
      "OC\\Tekton\\":"src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OC\\Tekton\\Tests\\": [
        "tests"
      ]
    }
  },
  "require": {
    "php": ">=7.1",
    "symfony/console": "4.1",
    "symfony/dependency-injection": "4.1",
    "symfony/config": "^4.1",
    "symfony/yaml": "4.1",
    "symfony/finder": "^4.1",
    "symfony/filesystem": "^4.1",
    "phpseclib/phpseclib": "^2.0",
    "pear/archive_tar": "^1.4",
    "symfony/process": "^4.1"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.1.18"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.2",
    "phpunit/phpunit": "^7.2",
    "behat/behat": "^3.4"
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin phan install --ansi",
      "@composer bin php-cs-fixer install --ansi",
      "@composer bin phpstan install --ansi",
      "@composer bin psalm install --ansi"
    ]
  }
}
